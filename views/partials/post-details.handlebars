<div class="post">
  <a href="href=/post/{{this.id}}">
    <div class="post-card">
      <div class="post-header">
        <h3 class="post-title">{{this.title}}</h3>
        <p class="post-details">
          Posted by :
          {{this.user.username}}
          on
          {{this.createdAt}}
        </p>
      </div>
      <div class="post-body">
        <p class="post-content">{{this.content}}</p>
      </div>
    </div>
  </a>
</div>