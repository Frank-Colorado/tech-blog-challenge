<div class="container-fluid d-flex justify-content-center">
  {{#if posts.length}}
    <div class="col-7 text-center post-container">
      {{#each posts as |post|}}
        <a href="/post/{{this.id}}">
          {{> post-details}}
        </a>
      {{/each}}
    </div>
  {{else}}
    <div class="text-center mt-5">
      <h2 class="pt-5">No posts yet...</h2>
    </div>
  {{/if}}
</div>