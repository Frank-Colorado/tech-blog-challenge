<div class="container-fluid d-flex justify-content-center">

  <div class="col-7 text-center post-container">
    {{> post-details post}}
    <div id="comment-form">
      <textarea
        id="commentInput"
        class="comment-box p-3"
        name="content"
        placeholder="What are your thoughts?"
      ></textarea>
      <div class="comment-btn-container">
        <p id="alert" class="me-3 red"></p>
        <label for="content">Comment as {{username}}</label>
        <button
          class="btn mx-3 commentBtn"
          id="commentBtn"
          data-id="{{post.id}}"
        >Comment</button>
      </div>

    </div>
    <div class="d-flex flex-column align-items-center my-5">
      <h2>Comments</h2>
      {{#if post.comments.length}}
        {{#each post.comments as |comment|}}
          {{> comment-details }}
        {{/each}}
      {{else}}
        <h3 class="mt-5">No comments yet...</h3>
      {{/if}}
    </div>

  </div>
</div>
<script src="/js/post.js"></script>
