<div class="container-fluid d-flex justify-content-center">

  <div class="col-7 text-center post-container">
    {{> post-details post}}
    <div id="comment-form">
      <textarea
        id="commentInput"
        class="comment-box p-3 col-6"
        name="content"
        placeholder="What are your thoughts?"
      ></textarea>
      <div class="comment-btn-container">
        <p id="alert" class="me-3 red"></p>
        <label for="content">Comment as Chawnk {{username}}</label>
        <button
          class="btn btn-info mx-3"
          id="commentBtn"
          data-id="{{post.id}}"
        >Comment</button>
      </div>

    </div>
    <div>
      <h3>Comments</h3>
      {{#if post.comments.length}}
        {{#each post.comments as |comment|}}
          {{!-- {{> comment-details }} --}}
        {{/each}}
      {{else}}
        <h3 class="mt-5">No comments yet...</h3>
      {{/if}}
    </div>

  </div>
</div>