<div class="container-fluid d-flex flex-column align-items-center">
  <div class="col-12 d-flex justify-content-end">
    <a href="/createPost"><button class="btn my-5 createBtn" id="createPostBtn">
        + Create Post</button></a>
  </div>
  {{#if posts.length}}
    <div class="col-5 text-center mt-5 post-container">
      {{#each posts as |post|}}
        <a href="/edit/{{post.id}}">
          <div class="user-post">
            <h5 class="py-3">{{post.title}}</h5>
            <h5 class="py-3">{{format_date post.createdAt}}</h5>
          </div>
        </a>
      {{/each}}
    </div>
  {{else}}
    <h2 class="pt-5">You haven't made any posts yet...</h2>
  {{/if}}
</div>