<div class="container-fluid d-flex flex-column justify-content-center">
  <div class="col-12 d-flex justify-content-end">
    <button class="btn my-5 createBtn" id="createPostBtn">
      + Create Post</button>
  </div>
  {{#if posts.length}}
    <div class="col-7 text-center post-container">
      {{#each posts as |post|}}
        <a href="/post/{{this.id}}">

        </a>
      {{/each}}
    </div>
  {{else}}
    <div class="text-center mt-5">
      <h2 class="pt-5">You haven't made any posts yet...</h2>
    </div>
  {{/if}}
</div>