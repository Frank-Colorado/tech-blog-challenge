<html lang="en" />
<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Tech Blog</title>

  <!-- Font Awesome -->
  <link
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    rel="stylesheet"
  />

  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
    crossorigin="anonymous"
  />
  <link
    href="https://fonts.googleapis.com/css2?family=Bruno+Ace&display=swap"
    rel="stylesheet"
  />
  <link
    href="https://fonts.googleapis.com/css2?family=Wix+Madefor+Display&display=swap"
    rel="stylesheet"
  />
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-light">
      <div class="container-fluid p-2">
        <h1>Tech Blog</h1>
      </div>
      {{!-- {{#if loggedIn}} --}}
      <div class="userNav me-5">
        <button
          class="dropdownBtn dropdown-toggle"
          type="button"
          id="dropdownBtn"
          data-toggle="dropdown"
          aria-haspopup="true"
          aria-expanded="true"
        >
          <i class="fa-solid fa-user" style="color: #ffffff;"></i>
        </button>
        <div id="dropdown" class="show dropdown">
          <a id="homeBtn" class="dropdown-item" href="/">Home</a>
          <a
            id="dashboardBtn"
            class="dropdown-item"
            href="/dashboard"
          >Dashboard</a>
          <a id="logoutBtn" class="dropdown-item">Log out</a>
        </div>
      </div>
      {{!-- {{else}} --}}
      {{! <div class="userNav me-5">
        <button id="loginBtn" class="btn me-2" type="button">
          Login
        </button>
        <button id="signupBtn" class="btn" type="button">
          Sign Up
        </button>

      </div> }}
      {{!-- {{/if}} --}}

    </nav>
  </header>

  {{{body}}}

</body>